# Terraform Variables - Example File
# Copy this file to terraform.tfvars and fill in your actual values
# WARNING: Never commit terraform.tfvars to git!

# AWS Configuration
aws_region  = "ap-southeast-1"
environment = "prod"

# Lambda Configuration
function_name       = "line-bot-ticker-report"
ecr_repository_name = "line-bot-ticker-report"
lambda_memory       = 512
lambda_timeout      = 60
log_retention_days  = 7

# Secrets (FILL THESE IN)
openai_api_key            = "sk-proj-YOUR_OPENAI_KEY_HERE"
line_channel_access_token = "YOUR_LINE_ACCESS_TOKEN_HERE"
line_channel_secret       = "YOUR_LINE_CHANNEL_SECRET_HERE"
