# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.csv text eol=lf
*.sh text eol=lf
*.tf text eol=lf
*.tfvars text eol=lf
*.just text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Force UTF-8 encoding for all text files
*.py charset=utf-8
*.md charset=utf-8
*.txt charset=utf-8
*.json charset=utf-8
*.csv charset=utf-8
*.sh charset=utf-8
*.tf charset=utf-8
*.tfvars charset=utf-8
*.just charset=utf-8
