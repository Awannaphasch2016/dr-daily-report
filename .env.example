# OpenRouter API Key (required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# LINE Bot Credentials (required)
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret

# Optional: Qdrant Configuration (defaults to in-memory mode)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# MCP Server URLs (optional - for enhanced data sources)
# Financial Markets MCP - Advanced technical analysis
FINANCIAL_MARKETS_MCP_URL=http://localhost:8003

# Portfolio Manager MCP - Portfolio insights
PORTFOLIO_MANAGER_MCP_URL=http://localhost:8004

# Alpaca Trading MCP - Real-time data + trading (primarily US markets)
ALPACA_MCP_URL=http://localhost:8005

# SEC EDGAR MCP - SEC filing data (disabled by default for Thai market focus)
# Set ENABLE_SEC_EDGAR=true to enable
SEC_EDGAR_MCP_URL=http://localhost:8002
ENABLE_SEC_EDGAR=false

# MCP Timeout (seconds, default: 30)
MCP_TIMEOUT=30
